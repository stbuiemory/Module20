<section>
    <div class="container is-halfheight">
        {{#each posts as |post|}}
        <div class="box">
            <a href="/post/{{id}}">
                <div class="content has-text-centered has-text-black">
                    <h4 class="title">{{title}}</h4>
                    <p class="post">{{post_body}}</p>
                    <p><small>{{format_date created_at}}</small></p>
                </div>
            </a>
        </div>
        {{else}}
        <h4 class="mt-5"><strong>Create your first post!</strong></h4>
        {{/each}}
    </div>
</section>

<footer class="footer is-fixed-bottom">
    <div class="content has-text-centered">
        <iframe src="https://gifer.com/embed/8oXf" width="100%" height="100%" frameBorder="0" allowFullScreen>
        </iframe>
    </div>
</footer>
