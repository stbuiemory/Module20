<section>
    <div class="container">
        {{#each posts as |post|}}
        <div class="box">
            <a href="/post/{{id}}">
                <div class="content has-text-centered has-text-black" style="background-image: url('/public/images/techpic1.jpg');">
                    <h4 class="title">{{title}}</h4>
                    <p class="post">{{post_body}}</p>
                    <p><small>{{format_date created_at}}</small></p>
                </div>
            </a>
        </div>
        {{else}}
        <h4 class="mt-5"><strong>Create your first post!</strong></h4>
        {{/each}}
    </div>
</section>



