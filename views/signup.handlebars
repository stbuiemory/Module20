<div class="hero-body">
    <div class="container">
        <p class="title"> Sign Up </p>
    </div>
</div>

<section>
    <div class="container">
        <div class="box" id="signup-form">
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" id="username-signup" type="username" placeholder="Username">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" id="password-signup" type="password" placeholder="Password">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control">
                    <button class="button is-info" id="sign-up-submit"> Sign Up! </button>
                    <button class="button is-link"> 
                    <a class="has-text-white" href="./login">Log In Instead </a> 
                    </button>
                </p>
            </div>
        </div>
    </div>
</section>

<script src="/javascript/signup.js"></script>
