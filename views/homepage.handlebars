<div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;">
    <img src="/images/background_moving2.gif" width="100%" height="100%" alt="Background Image">
</div>

<section>
    <div class="container is-halfheight has-background-success-light">
        {{#each posts as |post|}}
            <div class="box">
                <a href="/post/{{id}}">
                    <div class="content has-text-centered has-text-black has-background-grey-lighter">
                        <h4 class="title">{{title}}</h4>
                        <p class="post">{{post_body}}</p>
                        <p><small>{{format_date created_at}}</small></p>
                    </div>
                </a>
            </div>
        {{else}}
            <h4 class="mt-5"><strong>Create your first post!</strong></h4>
        {{/each}}
    </div>
</section>